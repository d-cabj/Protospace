.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: user_path(@user)}
          %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: @pro_img, style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @user.prototypes.count
            %i Projects
        .proto-user
          %span.degree
            = @group
        .row
          .col-md-6
            %h4 Profile
            %p
              = @profile
          .col-md-6
            %h4 Works
            %p
              = @works
.container.proto-list
  .row
    = render partial: "prototypes/prototype",collection: @prototypes
.text-center
  = paginate(@prototypes)
