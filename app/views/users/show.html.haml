.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "#{current_user.pro_img}", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @prototypes.count
            %i Projects
        .proto-user
          %span.degree
            = @group
        .row
          .col-md-6
            %h4 Profile
            %p
              = @profile
          .col-md-6
            %h4 Works
            %p
              = @works
.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          =link_to image_tag("#{prototype.capture_images.main.first.content}"),"/prototypes/#{prototype.id}"
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                =link_to "by #{current_user.nickname}"
              .proto-posted
                #{prototype.created_at.strftime("%b %d")}
            %ul.proto-tag-list.list-inline
              %li
                %a{href: "#", class: "btn btn-default"} iPad
              %li
                %a{href: "#", class: "btn btn-default"} wireframe

/ .text-center
/   = pagination(@prototypes)
