=form_for(current_user ,html:{class: 'container user-new'}) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            =f.text_field :nickname,type: "text", placeholder: "Username"
          / .user-image.col-md-2{:style: 'background-image: url'}
          /   %button.btn.btn-primary Change image
          /   =f.file_field :pro_img,type:"file"
        =f.text_field :email,class:'user-email',type: "email", placeholder: "E-Mail"
        =f.password_field :password,class:'user-password',type: "password", placeholder: "Password"
        =f.password_field :password_confirmation ,class:'user-password',type: "password", placeholder: "Password Confirmation"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            %input{type: "text", placeholder: "Member"}
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Profile"}
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Works"}
    .row.text-center.user-btn
      %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Save
