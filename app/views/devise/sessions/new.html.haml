.container
  =form_for(resource, as: resource_name, url: session_path(resource_name),html:{class: 'form-signin'}) do |f|
    %h2.form-signin-heading Please sign in
    %label.sr-only{for: "inputEmail"}
    =f.text_field :email,class: 'form-control',id:'inputEmail',type:'email',placeholder: "Email address"
    %label.sr-only{for: "inputPassword"}
    =f.text_field :password,class:'form-control',placeholder: "Password",  type: "password",id:'inputPassword'
    .checkbox
      %label
        %input{type: "checkbox", value: "remember-me"}/
        Remember me
    %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Sign in
  .text-center
    %p
      Not a member?
      =link_to'Sign up now',new_user_registration_path, class: 'get'
